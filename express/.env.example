# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/make-a-wish

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=30d

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX=100    # requests per window

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Wallet Configuration
# Lista de wallet-uri care au acces la panoul de administrare
ADMIN_WALLETS=admin_wallet1,admin_wallet2

# Wallet-ul pentru cheltuieli administrative (fees, expenses)
EXPENSE_WALLET=your_expense_wallet_address

# Wallet-ul pentru premii și recompense
PRIZE_POOL_WALLET=your_prize_pool_wallet_address

# Token Configuration
SOL_TO_CREDITS_RATE=6
PRIZE_POOL_PERCENTAGE=80    # Din fiecare tranzacție, % care merge în prize pool
EXPENSE_PERCENTAGE=20       # Din fiecare tranzacție, % care merge în expense wallet

# OpenRouter AI Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MODEL=anthropic/claude-2
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Game Configuration
DEFAULT_CREDITS=100
WISH_COST=10
FAST_ROUND_DURATION=3600000  # 1 hour in milliseconds
DAILY_ROUND_DURATION=86400000 # 24 hours in milliseconds
