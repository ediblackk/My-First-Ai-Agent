# API Configuration
VITE_API_URL=http://localhost:5000

# Solana Configuration
VITE_SOLANA_NETWORK=devnet        # devnet, testnet, or mainnet-beta
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

# App Configuration
VITE_APP_NAME=Make-A-Wish Game
VITE_DEFAULT_CREDITS=100          # Starting credits for new users
VITE_WISH_COST=10                 # Cost per wish in credits

# Feature Flags
VITE_ENABLE_ADMIN_DASHBOARD=true  # Enable/disable admin features
VITE_ENABLE_SYSTEM_MONITORING=true # Enable/disable system monitoring

# Development Settings
VITE_DEBUG_MODE=true             # Enable/disable debug logging
VITE_LOG_LEVEL=debug            # debug, info, warn, error

# Note: All VITE_ prefixed variables will be exposed to your code
# Be careful not to include any sensitive information in these variables
# For sensitive data, use the backend .env file instead
